<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="../../../../../../vendor/magento/mtf/Magento/Mtf/Repository/etc/repository.xsd">
    <repository class="Magento\Swatches\Test\Repository\SwatchProductAttribute">
        <dataset name="attribute_type_text_swatch">
            <field name="attribute_code" xsi:type="string">sw_color_%isolation%</field>
            <field name="frontend_input" xsi:type="string">Text Swatch</field>
            <field name="frontend_label" xsi:type="string">Text Swatch %isolation%</field>
            <field name="options" xsi:type="array">
                <item name="0" xsi:type="array">
                    <item name="is_default" xsi:type="string">No</item>
                    <item name="admin" xsi:type="string">Red</item>
                    <item name="view" xsi:type="string">Red</item>
                </item>
                <item name="1" xsi:type="array">
                    <item name="is_default" xsi:type="string">No</item>
                    <item name="admin" xsi:type="string">Green</item>
                    <item name="view" xsi:type="string">Green</item>
                </item>
                <item name="2" xsi:type="array">
                    <item name="is_default" xsi:type="string">No</item>
                    <item name="admin" xsi:type="string">Blue</item>
                    <item name="view" xsi:type="string">Blue</item>
                </item>
            </field>
            <field name="is_global" xsi:type="string">Global</field>
            <field name="used_in_product_listing" xsi:type="string">Yes</field>
        </dataset>
        <dataset name="attribute_type_visual_swatch">
            <field name="attribute_code" xsi:type="string">sw_color_%isolation%</field>
            <field name="frontend_input" xsi:type="string">Visual Swatch</field>
            <field name="frontend_label" xsi:type="string">Visual Swatch %isolation%</field>
            <field name="options" xsi:type="array">
                <item name="0" xsi:type="array">
                    <item name="is_default" xsi:type="string">No</item>
                    <item name="admin" xsi:type="string">Red</item>
                    <item name="view" xsi:type="string">Red</item>
                </item>
                <item name="1" xsi:type="array">
                    <item name="is_default" xsi:type="string">No</item>
                    <item name="admin" xsi:type="string">Green</item>
                    <item name="view" xsi:type="string">Green</item>
                </item>
                <item name="2" xsi:type="array">
                    <item name="is_default" xsi:type="string">No</item>
                    <item name="admin" xsi:type="string">Blue</item>
                    <item name="view" xsi:type="string">Blue</item>
                </item>
            </field>
            <field name="is_global" xsi:type="string">Global</field>
            <field name="used_in_product_listing" xsi:type="string">Yes</field>
        </dataset>
    </repository>
</config>
